<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                    x:Class="iOSSpecialFeatures.Resources.Styles">
    <!-- Xamarin Forms Defines Margins as Left,Top,Right,Bottom -->
    <Color x:Key="NavigationPrimary">#2196F3</Color>
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
        <Setter Property="BarTextColor" Value="White" />
    </Style>
    <Style x:Key="formLabel" TargetType="Label">
        <Setter Property="FontSize" Value="Small"/>
        <Setter Property="TextColor" Value="#979EA8"/>
    </Style>
    <Style x:Key="formInput" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="#F3F5F7"/>
        <Setter Property="FontSize" Value="Medium"/>
    </Style>
</ResourceDictionary>
